<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".CoroutineContextActivity">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/get_coroutineContext"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="get coroutineContext"
        android:textAllCaps="false"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/use_coroutineContext"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="use coroutineContext"
        android:textAllCaps="false"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/extend_coroutineContext"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="extend coroutineContext"
        android:textAllCaps="false"
        />
</LinearLayout>